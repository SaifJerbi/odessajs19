{
  "name": "odessajs19-plg-platform-demo",
  "version": "1.0.0",
  "description": "core platform for Pluggable web application using Angular workshop",
  "main": "index.js",
  "author": "Saif Jerbi",
  "license": "MIT",
  "bin": {
    "odessa-workshop": "./server/server.js"
  },
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:server\" \"npm run watch:node\"",
    "watch:node": "nodemon dist/server/server.js",
    "watch:server": "tsc -w -p tsconfig.server.json",
    "build": "yarn build:client && yarn build:server  && yarn copy-package",
    "build:client": "ng build",
    "build:server": "tsc -p tsconfig.server.json",
    "copy-package": "cp package.json ./dist"
  },
  "dependencies": {
    "@angular/animations": "~8.1.2",
    "@angular/common": "~8.1.2",
    "@angular/compiler": "~8.1.2",
    "@angular/core": "~8.1.2",
    "@angular/forms": "~8.1.2",
    "@angular/platform-browser": "~8.1.2",
    "@angular/platform-browser-dynamic": "~8.1.2",
    "@angular/router": "~8.1.2",
    "odessajs19-plg-platform-shared-api": "^1.0.0",
    "@types/express": "^4.17.0",
    "bootstrap": "^4.3.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "rxjs": "~6.4.0",
    "systemjs": "0.21.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1",
    "reflect-metadata": "0.1.12"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.2",
    "@angular/cli": "~8.1.2",
    "@angular/compiler-cli": "~8.1.2",
    "@angular/language-service": "~8.1.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "concurrently": "3.5.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "nodemon": "1.17.3",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
